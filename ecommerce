function red(){
var x=document.getElementsByClassName(form-control);
x.style.background="red"
}
function validate(mail){
  if (/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/.test(myForm.emailAddr.value))
  {
    return (true)
  }
    onblur("red();")
}

